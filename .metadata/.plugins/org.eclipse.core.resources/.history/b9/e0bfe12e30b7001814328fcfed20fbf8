
public class OEExoWhileBoucle {

	public static void main(String[] args) {
		int b = 1;
		
		
		while ( b <= 100) {
			
			System.out.println("b : " +b);
			b++;			
			
		}
		
		System.out.println("intermission b : " +b);


		while ( b >= 1) {
		
			System.out.println("b desc : " +b);
			b--;
			
		}
		
		System.out.println("intermission b : " +b);
		
		int pair = 2;		
		int chiffre = 1;
		
		while (chiffre <= 100){				
			
			if (chiffre == pair) {
				System.out.println("chiffre pair: " + chiffre);
				pair = pair + 2 ;
				
			}			
			chiffre++;			
			
		}	
		
		
		
	
	
	
	
	}
}
