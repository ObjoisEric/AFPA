
public class IfCondition {

	public static void main(String[] args) {
		
		// = : Affectation
		// == : comparaison
		//
		
		int prix = 12;
		int tva = 20;
		
		if (prix == 10) {
			System.out.println("le prix = 10");
		
			
				
		}
		else
		{
			System.out.println("la condition est fausse");
		}
		
		if (tva == 15 ) {
			
			System.out.println("la tva = 15");	
			
			
			
		}
	}

}
