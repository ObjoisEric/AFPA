
public class ExoOperateurLogiqueOE {

	public static void main(String[] args) {
		
		/*	noteJava = 14 			coefJava = 3 
			noteHtml = 14           coefHtml = 2 
			noteJavascript = 9      coefJava = 3 
			noteCss = 14         	coefJava = 7,5 
			moyenne  moyenne Sans les coef 
			MoyenneGenerale : moyenne avec les coef */
		
			double noteJava = 14 ;
			double noteHtml = 14 ;
			double noteJavascript = 14 ;
			double noteCss = 14 ;
			double coefJava = 14 ;
			double coefHtml = 14 ;
			double coefJavascript = 14 ;
			double coefCss = 14 ;
			double moyenne = 14 ;
			double moyenneGenerale = 14 ;
			double sommeCoef;
			
			moyenne = noteJava * coefJava 
					+ noteHtml * coefHtml
					+ noteJavascript * coefJavascript
					+ noteCss * coefCss;
			sommeCoef = coefJava + coefHtml + coefJavascript + coefCss;
			
			
			moyenneGenerale = moyenne / sommeCoef ;
			
			
			
			
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
	}
}
