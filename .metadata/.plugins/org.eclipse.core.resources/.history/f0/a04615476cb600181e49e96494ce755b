		 */
	
		double noteJava = 14;
		double noteHtml = 13;
		double noteJavascript = 9;
		double noteCss = 7.5;
		double moyenne;
		
		int coefJava = 3;
		int coefHtml = 2;
		int coefJavascript = 2;
		int coefCss = 1;
		int sommeCoef;
		
		
		sommeCoef=coefJava+coefHtml+coefJavascript+coefCss;
		
		moyenne = noteJava * coefJava;
		moyenne = moyenne + noteHtml*coefHtml;
		moyenne = moyenne + noteJavascript * coefJavascript;
		moyenne = moyenne + noteCss * coefCss;
		moyenne = moyenne / sommeCoef;

;		moyenne = Math.round(moyenne);
		System.out.println(moyenne);
		
		
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
