
public class IfCondition {

	public static void main(String[] args) {
		
		// = : Affectation
		// == : comparaison
		//
		
		int prix = 12;
		int tva = 20;
		
		if (prix == 10) {
			System.out.println("le prix = 10");
		}
		
		
		if (tva == 15 ) {
			
			System.out.println("la tva = 15");	
		}
		
		boolean bool = true;
		
		if(bool == false) {
			System.out.println("la variable bool est fausse");
		}
		if(bool == true) {
			System.out.println("la variable bool est vraie");
		}
		
		char car = 'a';
		if(car == 'c') {
			System.out.println("la variable car = c");
		}
		if(car == 'a') {
			System.out.println("la variable car = a");
		}
		
		
		
		
		
		
		
		
		
	}

}
